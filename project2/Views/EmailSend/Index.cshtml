@model project2.user

@{
    ViewBag.Title = "EmailSent";
    var images = ViewBag.images; 
    Layout = null;
}




<html>
<head>

    <title>Company Page - Help & Support Topic</title>

    <!-- Required meta tags always come first -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="x-ua-compatible" content="ie=edge">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" type="text/css" href="~/Content/Bootstrap/dist/css/bootstrap-reboot.css">
    <link rel="stylesheet" type="text/css" href="~/Content/Bootstrap/dist/css/bootstrap.css">
    <link rel="stylesheet" type="text/css" href="~/Content/Bootstrap/dist/css/bootstrap-grid.css">

    <!-- Main Styles CSS -->
    <link rel="stylesheet" type="text/css" href="~/Content/css/main.min.css">
    <link rel="stylesheet" type="text/css" href="~/Content/css/fonts.min.css">

    <!-- Main Font -->
    <script src="~/Scripts/js/webfontloader.min.js"></script>
    <script>
        WebFont.load({
            google: {
                families: ['Roboto:300,400,500,700:latin']
            }
        });
    </script>

</head>
<body>
    <div class="container">
        <div class="row mt-5">
            <div class="col-4 offset-4 ">
                <div class="ui-block">
                    <div class="ui-block-content" style="">
                        <div class="row">
                            <div class="col col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                <div class="top-header" style="height: 200px;">
                                    <div class="top-header-author">
                                        <a href="02-ProfilePage.html" class="author-thumb">
                                            <img src="@images" class='rounded-circle' style='height: 132px; width: 132px;' />
                                        </a>


                                        <div class="author-content">
                                            <a href="02-ProfilePage.html" class="h4 author-name">
                                                @Html.Label("user_bio", (string)Session["user_name_id"])
                                            </a>
                                            <div class="country">  @Html.Label("user_bio", (string)Session["user_name"])</div>
                                        </div>
                                    </div>
                                </div>

                                <p id="emailHelp" class="form-text text-center  text-muted">Enter Your Current Email id  <br /></p>

                                @using (Html.BeginForm("Email", "EmailSend", FormMethod.Post))
                                {
                                    @Html.AntiForgeryToken()

                            <div class="form-horizontal center-block">


                                <div class="form-group  ">

                                    <div class="col-md-10 align-center">

                                        @Html.EditorFor(model => model.user_email, (string)Session["user_name_id"], new { htmlAttributes = new { @class = "form-control" } })

                                    </div>
                                </div>



                                <div class="form-group">

                                    <p class="text-center">
                                        <button class="btn btn-primary" type="submit">Send Email</button>

                                        <a href="/ForgetPassword/Index" class="btn btn-secondary">Not You?</a>
                                    </p>
                                </div>
                                @ViewBag.Epassword
                            </div>
                                }

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

  
  
  
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
