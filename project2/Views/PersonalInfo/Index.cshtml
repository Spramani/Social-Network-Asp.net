@model project2.user
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_DashbordLayoutPage.cshtml";
    //   var edituserdata = ViewBag.edituserdata;
}

<div class="col col-xl-9 order-xl-2 col-lg-9 order-lg-2 col-md-12 order-md-1 col-sm-12 col-12">
    <div class="ui-block">
        <div class="ui-block-title">
            <h6 class="title">Personal Information</h6>
        </div>
        <div class="ui-block-content">



            <!-- Personal Information Form  -->

            @using (Ajax.BeginForm("Create", "PersonalInfo", new AjaxOptions { HttpMethod = "POST", OnSuccess = "OnSuccess", OnFailure = "OnFailure", LoadingElementId = "progress" }, new { id = "pesonalinfo_form" }))

            {
                <div class="row">

                    <div class="col col-lg-6 col-md-6 col-sm-12 col-12">
                        <div class="form-group label-floating">
                            <label class="control-label">FullName</label>
                            @Html.TextBoxFor(m => m.user_name, new { @class = "form-control" })

                            @Html.ValidationMessageFor(m => m.user_name, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group label-floating">
                            <label class="control-label">Write a little description about you </label>
                            @Html.TextBoxFor(m => m.user_bio, new { @class = "form-control" })

                        </div>

                        <div class="form-group  label-floating">
                            <label class="control-label">Your Birthdate</label>
                            @Html.TextBoxFor(m => m.user_dateofbirth, new { @class = "form-control" })

                            <span class="input-group-addon">
                                <svg class="olymp-month-calendar-icon icon"><use xlink:href="~/Content/svg-icons/sprites/icons.svg#olymp-month-calendar-icon"></use></svg>
                            </span>
                        </div>
                        <div class="form-group  label-floating">
                            <label class="control-label">Occupation</label>
                            @Html.TextBoxFor(m => m.user_occupation, new { @class = "form-control" })

                        </div>
                        <div class="form-group label-floating is-select">
                            <label class="control-label">Status</label>
                            @Html.DropDownListFor(m => m.user_status,
                        new SelectList(Enum.GetValues(typeof(Status))),
                        "Select Status")
                        </div>
                    </div>

                    <div class="col col-lg-6 col-md-6 col-sm-12 col-12">
                        <div class="form-group label-floating">
                            <label class="control-label">UserName</label>
                            @Html.TextBoxFor(m => m.user_name_id, new { @class = "form-control" })

                        </div>


                        <div class="form-group label-floating ">
                            <label class="control-label">Your Email Id</label>
                            @Html.TextBoxFor(m => m.user_email, new { @class = "form-control" })

                        </div>

                        <div class="form-group label-floating ">
                            <label class="control-label">Your Phone</label>
                            @Html.TextBoxFor(m => m.user_contect, new { @class = "form-control" })

                        </div>
                        <div class="form-group  label-floating ">
                            <label class="control-label">Your BirthPlace:</label>
                            @Html.TextBoxFor(m => m.user_birthplace, new { @class = "form-control" })
                        </div>
                        <div class="form-group  label-floating ">
                            <label class="control-label">LivesIn</label>
                            @Html.TextBoxFor(m => m.user_livesin, new { @class = "form-control" })

                        </div>
                        <div class="form-group  label-floating ">
                            <label class="control-label">Your Website</label>
                            @Html.TextBoxFor(m => m.user_website, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="col col-lg-6 col-md-6 col-sm-12 col-12">
                        <button type="submit" class="btn btn-primary btn-lg full-width">Save all Changes</button>
                    </div>

                </div>
            }
            <!-- ... end Personal Information Form  -->
        </div>
    </div>
</div>


