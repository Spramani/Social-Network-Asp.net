@model project2.user
@{
    ViewBag.Title = "Login Page";
}

    <div class="registration-login-form">
        <!-- Nav tabs -->
        <ul class="nav nav-tabs" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" data-toggle="tab" href="#home" role="tab">
                    <svg class="olymp-login-icon"><use xlink:href="~/Content/svg-icons/sprites/icons.svg#olymp-login-icon"></use></svg>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#profile" role="tab">
                    <svg class="olymp-register-icon"><use xlink:href="~/Content/svg-icons/sprites/icons.svg#olymp-register-icon"></use></svg>
                </a>
            </li>

        </ul>

        <!-- Tab panes -->
       

        <div class="tab-content">
            <div class="tab-pane active" id="home" role="tabpanel" data-mh="log-tab">
                <div class="title h6">Login to your Account</div>
                <a href="#" class="login_logo">
                    <div class="img-wrap">  
                        <img src="~/Content/img/icon-fly.png" alt="Olympus" class="logo-colored">
                    </div>
                    <div class="title-block text-center">
                        <h6 class="logo-title">Social Gram</h6>
                        <div class="sub-title">SOCIAL NETWORK</div>
                    </div>
                </a>
                <br />
                <br />
                <br />
                @using (Html.BeginForm("loginform", "Login", FormMethod.Post))
                {
                  
                    <div class="row">
                        <div class="col col-12 col-xl-12 col-lg-12 col-md-12 col-sm-12">
                            <div class="form-group label-floating is-empty">
                                <label class="control-label">Your UserId</label>
                                @Html.TextBoxFor(m => m.user_name_id, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.user_name_id)

                            </div>
                            <div class="form-group label-floating is-empty">
                                <label class="control-label">Your Password</label>
                                @Html.PasswordFor(m => m.user_password, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.user_password)

                            </div>

                            <div class="remember">

                                <div class="checkbox">

                                </div>
                                <a href="/ForgetPassword/Index" class="forgot" style="border:solid">Forgot my Password</a>
                            </div>


                            <button class="btn btn-primary btn-lg full-width" type="submit">Login</button>
                            @ViewBag.registration
                            @ViewBag.Message
                        </div>
                    </div>
                }
            </div>


            <div class="tab-pane " id="profile" role="tabpanel" data-mh="log-tab">
                <div class="title h6">Register to Social Network</div>
                @*    @using (Ajax.BeginForm("Create", "Login", new AjaxOptions { HttpMethod = "POST", OnSuccess = "OnSuccess", OnFailure = "OnFailure", LoadingElementId = "progress" }, new { id = "login_form" }))
                *@
                @using (Html.BeginForm("Create", "Login", FormMethod.Post))

                {

            <div class="row">

                <div class="col col-12 col-xl-12 col-lg-12 col-md-12 col-sm-12">
                    <div class="form-group label-floating is-empty">
                        <label class="control-label">Full Name</label>
                        @Html.TextBoxFor(m => m.user_name, new { @class = "form-control" })

                        @Html.ValidationMessageFor(m => m.user_name, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group label-floating is-empty">
                        <label class="control-label">user name</label>
                        @Html.TextBoxFor(m => m.user_name_id, new { @class = "form-control" })
                        @Html.ValidationMessage("user_name_id")
                        @Html.ValidationMessageFor(m => m.user_name_id, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col col-12 col-xl-12 col-lg-12 col-md-12 col-sm-12">
                    <div class="form-group label-floating is-empty">
                        <label class="control-label">email</label>
                        @Html.TextBoxFor(m => m.user_email, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.user_email, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group label-floating is-empty">
                        <label class="control-label">Your Password</label>
                        @Html.PasswordFor(m => m.user_password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.user_password, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group date-time-picker label-floating">
                        <label class="control-label">Conform Password</label>
                        @Html.PasswordFor(m => m.user_Conpassword, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.user_Conpassword, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group label-floating is-select">
                        @Html.DropDownListFor(m => m.user_gender,
                 new SelectList(Enum.GetValues(typeof(Gender))),
                 "Select Gender")

                    </div>

                    <div class="remember">
                        <div class="checkbox">
                            <label for="acceptcbk" id="acceptcbklabel">
                                <input id="acceptcbk" name="optionsCheckboxes" type="checkbox">
                                I accept the <a href="Javascript:void(0)">Terms and Conditions</a> of the website
                            </label>

                        </div>
                    </div>

                    <button class="btn btn-primary btn-lg full-width" type="submit">Registration</button>
                </div>
             
            </div>
                }



            </div>


        </div>
     
    </div>
