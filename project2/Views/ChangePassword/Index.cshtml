@model project2.user
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_DashbordLayoutPage.cshtml";
    var edituserdata = ViewBag.edituserdata;

}


<div class="col col-xl-9 order-xl-2 col-lg-9 order-lg-2 col-md-12 order-md-1 col-sm-12 col-12">
    <div class="ui-block">
        <div class="ui-block-title">
            <h6 class="title">Change Password</h6>
        </div>
        <div class="ui-block-content">


            <!-- Change Password Form -->

            @using (Html.BeginForm("changepass", "ChangePassword", FormMethod.Post))
            {
                <div class="row">

                    <div class="col col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                        <div class="form-group label-floating">
                            <label class="control-label">Confirm Current Password</label>
                            @Html.PasswordFor(m => m.CompairPassword, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="col col-lg-6 col-md-6 col-sm-12 col-12">
                        <div class="form-group label-floating is-empty">
                            <label class="control-label">Your New Password</label>
                            @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="col col-lg-6 col-md-6 col-sm-12 col-12">
                        <div class="form-group label-floating is-empty">
                            <label class="control-label">Confirm New Password</label>
                            @Html.PasswordFor(m => m.ConfirmNewPassword, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="col col-lg-12 col-sm-12 col-sm-12 col-12">
                        <div class="remember">

                            <div class="checkbox">
                                   @ViewBag.cpMessage 
                            @ViewBag.compMessage 

                            </div>
                         
                            <a href="#" class="forgot">Forgot my Password</a>
                        </div>
                    </div>

                    <div class="col col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                        <button class="btn btn-primary btn-lg full-width">Change Password Now!</button>
                    </div>

                </div>
            }

                <!-- ... end Change Password Form -->
            </div>
    </div>
</div>

